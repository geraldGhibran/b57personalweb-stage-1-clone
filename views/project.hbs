  </head>
  <body>
    <!-- navbar start -->
    <header data-bs-theme="dark">
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-white">
        <div class="container-fluid">
          <img
            src="https://dumbways.id/assets/images/brandred.png"
            class="navbar-brand navbar-logo"
          />
          <button
            class="navbar-toggler text-dark"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"
              ><i
                style="padding-top: 5px"
                class="fa fa-bars"
                aria-hidden="true"
              ></i
            ></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item active">
                <a class="nav-link text-dark poppins-bold" href="/"
                  >Home <span class="sr-only">(current)</span></a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-dark poppins-regular"
                  href="/project"
                  >Add Project</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-dark poppins-regular"
                  href="/testimonial"
                  >Testimonial</a
                >
              </li>
            </ul>
            <form action="/contact" class="form-inline mt-2 mt-md-0">
              <button
                class="btn bg-dark text-white my-2 my-sm-0 poppins-bold"
                type="submit"
              >
                contact me
              </button>
            </form>
          </div>
        </div>
      </nav>
    </header>

    <div class="jumbotron p-3 p-md-5 text-white rounded"></div>

    <div class="blog">
      <div class="blog-form">
        <div class="form-container">
          <form onsubmit="AddDataProject(event)">
            <h1 class="poppins-bold">ADD MY PROJECT</h1>
            <div>
              <div class="form-group">
                <label for="input-project-name">Project Name</label>
                <input
                  id="input-project-name"
                  class="form-control"
                  aria-describedby="emailHelp"
                  placeholder="Enter project name"
                />
              </div>
            </div>
            <div class="project-date">
              <div class="form-group">
                <label for="input-project-startdate">Start Date</label>
                <input type="date" id="input-project-startdate" />
              </div>
              <div class="form-group">
                <label for="input-project-enddate">End Date</label>
                <input type="date" id="input-project-enddate" />
              </div>
            </div>

            <div class="form-group">
              <label for="input-project-description">Description</label>
              <textarea
                class="form-control"
                id="input-project-description"
              ></textarea>
            </div>
            <div class="technologies-container">
              <div class="technologies-item">
                <input
                  type="checkbox"
                  id="nodejs"
                  name="nodejs"
                  value="nodejs"
                />
                <label for="nodejs"> Node Js</label>
              </div>

              <div class="technologies-item">
                <input
                  type="checkbox"
                  id="nextjs"
                  name="vehicle2"
                  value="nextjs"
                />
                <label for="nextjs">Next Js</label>
              </div>
              <div class="technologies-item">
                <input
                  type="checkbox"
                  id="reactjs"
                  name="reactjs"
                  value="reactjs"
                />
                <label for="reactjs">React Js</label>
              </div>
              <div class="technologies-item">
                <input
                  type="checkbox"
                  id="typescript"
                  name="typescript"
                  value="typescript"
                />
                <label for="typescript">Typescript</label>
              </div>
            </div>

            <div>
              <div class="input-blog-image-group">
                <label>Upload Image</label>
                <label for="formFile" class="form-label">
                  <p>Attach File</p>
                  <i class="fa-solid fa-paperclip"></i>
                </label>
                <input
                  class="form-control"
                  type="file"
                  id="input-project-image"
                />
                <!-- <label for="input-blog-image">
                  <p>Attach File</p>
                  <i class="fa-solid fa-paperclip"></i>
                </label>
                <input type="file" id="input-project-image" /> -->
              </div>
            </div>
            <div class="button-group">
              <!-- <button type="submit">Submit</button> -->
              <button type="submit" class="btn submitButton w-100">Add</button>
            </div>
          </form>
        </div>
      </div>

      <hr class="line" />
      <div id="contents" class="blog-list">
        <!-- dynamic content would be here -->
      </div>
    </div>
    <div class="container card-body-all">
      <div class="card-container d-flex flex-wrap" id="curd-table"></div>
      <div class="card-container d-flex flex-wrap" id="sort-table"></div>
    </div>
    <!-- navbar end -->

    <div
      class="modal fade"
      id="exampleModal-2"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="form">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Update Product Data
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <div id="image-div"></div>
                <label for="exampleFormControlInput1">Project Id -</label>
                <input
                  type="text"
                  class="form-control"
                  id="id-edit"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-default"
                  disabled
                />
              </div>
              <div class="form-group mt-2">
                <label for="exampleFormControlSelect1">Name -</label>
                <input
                  type="text"
                  class="form-control"
                  id="name-edit"
                  placeholder="Enter Product name"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-default"
                />
              </div>
              <div class="form-group mt-2">
                <label for="exampleFormControlSelect1">Start Date -</label>
                <input
                  type="date"
                  class="form-control"
                  id="start-date-edit"
                  placeholder="Enter Product Price"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-default"
                />
              </div>
              <div class="form-group mt-2">
                <label for="exampleFormControlSelect1">End Date -</label>
                <input
                  type="date"
                  class="form-control"
                  id="end-date-edit"
                  placeholder="Enter Product Price"
                  aria-label="Sizing example input"
                  aria-describedby="inputGroup-sizing-default"
                />
              </div>
              <div class="form-group mt-2">
                <label for="exampleFormControlTextarea1">Description -</label>
                <textarea
                  class="form-control h-25"
                  id="description-edit"
                  placeholder="Enter Description of Product"
                  rows="3"
                ></textarea>
              </div>
              <div class="form-group mt-2">
                <label for="exampleFormControlSelect1">Product - Image -</label>
                <input type="file" class="form-control" id="image-edit" />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-success w-100" id="update">
              Update
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Edit Module End -->

    <!-- Add Module End -->
